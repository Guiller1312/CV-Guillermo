---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Proyectos" sideBarActiveItemID="proyectos">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Proyectos curso</div>
  </div>

  <div class="divider my-0"></div>
  <HorizontalCard
    title="Proyecto curso"
    img="/Fondo_practicafinal.png"
    desc="Código del Proyecto Final de curso de maquetación y páginas web."
    url="https://github.com/Guiller1312/ProyectoFinal"
  />
  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Ejercicios Clase</div>
  </div>
 <HorizontalCard
    title="Ejercicios clase JS"
    img="/JS-imagen.webp"
    desc="Ejercicios hechos en clase de JS, con el objetivo de ampliar nuestros conocimientos y habilidades en programación."
    url="https://github.com/Guiller1312/Maquetacion_paginas_web/tree/main/Clase/EJERCICIOS"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Prácticas curso JS"
    img="/JS-imagen.webp"
    desc="Prácticas mandadas en clase de JS, con el objetivo de ampliar nuestros conocimientos y habilidades en programación."
    url="https://github.com/Guiller1312/Maquetacion_paginas_web/tree/main/Clase/JS"
  />

  <HorizontalCard
    title="Proyectos curso HTML"
    img="/post_img.webp"
    desc="Ejercicios mandado en clase de HTML, con el objetivo de ampliar nuestros conocimientos y habilidades en programación."
    url="https://github.com/Guiller1312/Maquetacion_paginas_web/tree/main/Clase/HTML_clase_ejemplos"
    badge="FOSS"
  />
  
</BaseLayout>
